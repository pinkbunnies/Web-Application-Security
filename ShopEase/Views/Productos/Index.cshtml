@model IEnumerable<ShopApp.Models.Producto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Productos";
}
<h1>Lista de Productos</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.ProductoID</td>
            <td>@producto.Nombre</td>
            <td>@producto.Precio.ToString("C")</td>
            <td>@producto.Categoria</td>
            <td>
                <!-- Enlace para ver detalles -->
                <a href="/Productos/Detalle?id=@producto.ProductoID">Ver detalles</a> |
                <!-- Por defecto se añade 1 unidad -->
                <a href="/Carrito/Agregar?productoID=@producto.ProductoID&cantidad=1">Añadir al Carrito</a>
            </td>
        </tr>
    }
    </tbody>
</table>
